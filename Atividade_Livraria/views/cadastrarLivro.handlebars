<h1>Adicionar Livro</h1>
<form action="/livros/cadastrarLivro/enviar" method="post">
    <span>Autor(es):</span><br>
    <div class="autores">
        {{#each autores}}
            <div class="autorElement">
                <input type="checkbox" name="autores" id="" value="{{this.id}}">
                <span>{{this.autor}}</span> 
            </div>
        {{/each}}   
        <br>
    </div>
    <span>Livro:</span><br>
    <input type="text" name="nome" placeholder="Nome do livro..."><br>
    <span>Categorias:</span><br>
    <select name="categoria" id="cate">
        <option value="0">Escolha uma opção...</option>
        {{#each categorias}}
                <option value="{{this.id}}">{{this.categoria}}</option>
        {{/each}}
    </select><br><br>
    <button type="submit">Cadastrar</button>
</form>
